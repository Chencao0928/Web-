<body> 
<div id="chat" style="height:200px;overflow:auto;"> 
</div> 
 
<script> 
$(document).ready(function(){  

   $("#add_btn").click(function(){  
       $.ajax({  
              type: "POST",  
              url: "add.php",  
              data:{message:escape($("#messagetext").val())},  
