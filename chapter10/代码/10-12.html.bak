<body>
<script src="jquery.min.js"></script>
<script>
$(function(){	loadlogin(); })
function loadlogin(){		//加载登录界面的函数
		 $.post('10-12.php', function (data){   
	   $("#maker").html(data);  
} );
}
function login(){			//发送登录信息的函数
		var name = $("#name").val();
		var pass = $("#pass").val();
		if(name =="")	alert("用户名不可以为空！");
		$.post('10-12.php', {name: name,pass:pass}, function (data){   
	   $("#maker").html(data);   
});
}
function outlogin(){			//登出函数
		//$("maker").load("10-12.asp?action=outlogin");
		
		 $.post('10-12.php', {action: 'outlogin'}, function (data){   
	   $("#maker").html(data);   
});
}
</script>
 <div id="box">
          <div id="box_title"><h3>用户登录</h3></div>
